<h1>LISTS OF POSTS</h1>
<ul>
  <% @posts.each do |post| %>
    <li>
      <p>
        <%= link_to post.title, post_path(post) %> created by <%= post.user.try(:login) %>
      </p>
      <span>
        POST HAS <%= pluralize post.comments.count, 'comment' %>
      </span>
      <span>
        <%= link_to 'Edit post', edit_post_path(post) %>
      </span>
      <span>
        <%= link_to 'Delete post', post_path(post), method: :delete, :onclick => "return confirm('Are you sure you want to delete this post?')" %>
      </span>      
    </li>
  <% end %>
</ul>

<ul>
  <p>
    <%= link_to 'Create post', new_post_path %>
  </p>

  <p>
    <% flash.each do |name, msg| %>
      <%= content_tag :div, msg, class:name %>
    <% end %>
  </p>
</ul>
